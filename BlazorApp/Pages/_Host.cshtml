@page "/"
@namespace BlazorApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorApp</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="BlazorApp.styles.css" rel="stylesheet" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

<script src="_framework/blazor.server.js"></script>

    <script>
   
        function start() {
            document.getElementById('games').style.display = "flex";
            visible()
            setTimeout(finish, 30000);
        }
        
        function random(min, max) {
              min = Math.ceil(min);
              max = Math.floor(max);
              return Math.floor(Math.random() * (max - min)) + min;
        }
        
        function visible() {
            const ale = random(1, 7)
            const posx = random(0,425) + "px";
            const posy = random(0, 1400) + "px";
            
            document.getElementById(ale).style.display = "block";
            document.getElementById(ale).style.top = posx;
            document.getElementById(ale).style.left = posy;
        
        }
        
        function hidden(id) {
            document.getElementById(id).style.display = "none"
        }
        
        function finish() {
            document.getElementById('1').style.display = "none";
            document.getElementById('2').style.display = "none";
            document.getElementById('3').style.display = "none";
            document.getElementById('4').style.display = "none";
            document.getElementById('5').style.display = "none";
            document.getElementById('6').style.display = "none";                                                                
            document.getElementById('games').style.display = "none";
            DotNet.invokeMethodAsync('BlazorApp', 'Finish');
        }
        
    </script>

</body>
</html>
